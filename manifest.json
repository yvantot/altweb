{
    "manifest_version": 3,
    "name": "AltWeb",
    "author": "Jun Ivanne Dalman",
    "version": "1.0.0",
    "description": "AltWeb brings the power of Alt-Tab to the web. Instantly switch between tabs, windows, or even bookmarks, all without leaving your current site.",
    "homepage_url": "https://yvantot.github.io/i",
    "permissions": [
        "tabs",
        "windows",
        "bookmarks",
        "storage",
        "unlimitedStorage"
    ],
    "icons": {
        "16": "assets/icons/icon16.png",
        "32": "assets/icons/icon32.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "css/cs_index.css",
                "assets/Quicksand.ttf"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "commands": {
        "w": {
            "suggest_key": {
                "default": "Alt+W"
            },
            "description": "Start Alt-Web, forward",
            "global": true
        },
        "q": {
            "suggest_key": {
                "default": "Alt+Q"
            },
            "description": "Start Alt-Web, backward",
            "global": true
        },
        "d": {
            "suggest_key": {
                "default": "Alt+D"
            },
            "description": "Delete tab"
        },
        "e": {
            "suggest_key": {
                "default": "Alt+E"
            },
            "description": "Search tab"
        }
    },
    "background": {
        "service_worker": "js/bg_index.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "js": [
                "./js/cs_index.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "./html/popup.html",
        "default_title": "Alt-Web"
    }
}